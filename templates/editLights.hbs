<section class='tab lights {{tab.cssClass}}' data-group='primary' data-tab='lights' style="overflow-y: scroll;">
  <hr>
  <fieldset>
    <legend>Generelle Lichter</legend>
    <label for="lanternTag">Tag für Laternen</label>
    <input type="text" name="lanternTag" id="lanternTag" value="{{tags.lights.lanternTag}}">
    <label for="citywallTag">Tag der Stadtmauer</label>
    <input type="text" name="citywallTag" id="citywallTag" value="{{tags.lights.citywallTag}}">
    <label for="residenceTag">Tag der Wohnhäuser</label>
    <input type="text" name="residenceTag" id="residenceTag" value="{{tags.lights.residenceTag}}">
  </fieldset>
  <fieldset>
    <legend>Zusätzliche Lichter</legend>
    {{#each tags.lights.scenicLights as |scenicLight|}}
    <fieldset>
      <legend>{{scenicLight.tag}}</legend>
      <input type="text" name="{{scenicLight.icon}}Icon" id="{{scenicLight.icon}}Icon" value="{{scenicLight.icon}}">
      <input type="text" name="{{scenicLight.tag}}Tag" id="{{scenicLight.tag}}Tag" value="{{scenicLight.tag}}">
    </fieldset>
    {{/each}} 
    <hr>
    <fieldset>
      <legend>Neues Licht hinzufügen</legend>
      <input type="text" name="newScenicLightIcon" id="newScenicLightIcon" placeholder="Icon" value="fa-regular fa-lightbulb">
      <input type="text" name="newScenicLightTag" id="newScenicLightTag" placeholder="Lichter Tag">
    </fieldset>
  </fieldset>
  <fieldset>
    <legend>Stadtteile</legend>
    {{#each tags.lights.districtTags as |districtTag|}}
    <input type="text" name="{{districtTag}}" id="{{districtTag}}" value="{{districtTag}}">
    {{/each}}
    <hr>
    <input type="text" name="newDistrictTag" id="newDistrictTag" placeholder="Stadtteil hinzufügen">
  </fieldset>
  <fieldset>
    <legend>Stadtteil-Lichter</legend>
  {{#each tags.lights.specialTagsbyDistricts}}
    <fieldset> 
      <legend>{{@key}}</legend>
      {{#each this as |tag|}}
      <input type="text" name="{{@key}}{{tag}}" id="{{@key}}{{tag}}" value="{{tag}}">
      {{/each}}
      <hr>
      <input type="text" name="{{@key}}newTag" id="{{@key}}newTag" placeholder="Licht zu {{@key}} hinzufügen">
    </fieldset>
  {{/each}}
  </fieldset>
</section>


